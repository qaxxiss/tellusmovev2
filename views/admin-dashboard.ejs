
<%- include('partials/header') %>
<section class="container page">
  <h2>Admin Dashboard</h2>
  <a class="btn btn-outline" href="/admin-logout">Logout</a>
  <div class="admin-table">
    <% bookings.forEach(b => { %>
      <div class="admin-row">
        <div><strong><%= b.name %></strong> — <%= b.pickup %> → <%= b.dropoff %></div>
        <div class="admin-actions">
          <form action="/admin/mark/<%= b.id %>" method="POST" style="display:inline"><button class="btn" type="submit">Confirm</button></form>
          <form action="/admin/delete/<%= b.id %>" method="POST" style="display:inline"><button class="btn btn-danger" type="submit">Delete</button></form>
        </div>
      </div>
    <% }) %>
  </div>
</section>
<%- include('partials/footer') %>
