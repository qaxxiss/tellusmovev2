
<%- include('partials/header') %>
<section class="container page">
  <h2>Book a Truck</h2>

  <% if (typeof success !== 'undefined' && success) { %>
    <div id="confirm-popup" class="popup">
      <p>Booking saved! Booking ID: <%= bookingId %></p>
      <div class="popup-actions">
        <a class="btn" href="/coming-soon">Pay Now</a>
        <a class="btn btn-outline" href="/contact">Get a Consult First</a>
      </div>
    </div>
  <% } %>

  <form class="form-grid" action="/book" method="POST">
    <label>Name: <input name="name" required></label>
    <label>Phone: <input name="phone" required></label>
    <label>Email: <input name="email"></label>
    <label>Pickup: <input name="pickup" required></label>
    <label>Dropoff: <input name="dropoff" required></label>
    <label>Date: <input name="date" type="date" required></label>
    <label>Truck type: <input name="truckType"></label>
    <div class="full"><button type="submit" class="btn">Confirm Book Truck</button></div>
  </form>
</section>
<%- include('partials/footer') %>
